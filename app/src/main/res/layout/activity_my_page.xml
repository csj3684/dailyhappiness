<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="com.example.dailyhappiness.MyPageActivity" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:elevation="30dp">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/iBtnBack"
            android:background="#00000000"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/buttonback"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/ivMyReview"
            android:layout_centerInParent="true"
            android:src="@drawable/imgmypage"
            android:scaleType="fitCenter"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/relativeLayout"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/peachclover"/>

    <TextView
        android:id="@+id/tvId"
        android:text="IdTextView"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ivProfile"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/relativeMission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvId"
        android:layout_marginTop="40dp"
        android:paddingVertical="20dp">
        <TextView
            android:id="@+id/t2"
            android:text="성공한 미션"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvMissionCount"
            android:text="n 개"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/t2"
            android:layout_marginLeft="85dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativePush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeMission"
        android:paddingVertical="20dp">
        <TextView
            android:id="@+id/t3"
            android:text="푸시알람"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Switch
            android:id="@+id/switchPush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_toRightOf="@+id/t3" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvWeek"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="일주일에 쓸 수 있는 시간과 비용입니다"
        android:layout_below="@+id/relativePush"/>

    <RelativeLayout
        android:id="@+id/relativeTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWeek"
        android:paddingVertical="20dp">
        <TextView
            android:id="@+id/t4"
            android:text="시간"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/btnMinus1"
            android:background="#00000000"
            android:src="@drawable/btnminus"
            android:scaleType="fitCenter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/t4"
            android:layout_marginLeft="140dp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/tvTime"
            android:text="1"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/btnMinus1"
            android:layout_marginHorizontal="5dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/btnPlus1"
            android:background="#00000000"
            android:src="@drawable/btnplus"
            android:scaleType="fitCenter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeTime"
        android:paddingVertical="20dp">
        <TextView
            android:id="@+id/t5"
            android:text="비용"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/btnMinus2"
            android:background="#00000000"
            android:src="@drawable/btnminus"
            android:scaleType="fitCenter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/t5"
            android:layout_marginLeft="140dp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/tvCost"
            android:text="100000"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/btnMinus2"
            android:layout_marginHorizontal="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <ImageButton
            android:id="@+id/btnPlus2"
            android:background="#00000000"
            android:src="@drawable/btnplus"
            android:scaleType="fitCenter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>
</RelativeLayout>
</layout>